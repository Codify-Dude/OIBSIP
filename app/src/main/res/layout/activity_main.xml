<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradientblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Length"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:drawableLeft="@drawable/ruler1"
            android:textSize="15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <Button
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/area"
            android:text="Area"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Volume"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/volume"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />
        <Button
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Speed"
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/speed"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Weight"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/weight"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
        <Button
            android:id="@+id/temprature"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Temperature"
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/temperature"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/power"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Power"
            android:textColor="#000000"
            android:drawableLeft="@drawable/power"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
        <Button
            android:id="@+id/pressr"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="Pressure"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/pressure"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />
        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            android:id="@+id/pressur"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="150dp"-->
        <!--            android:layout_weight="1"-->
        <!--            style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
        <!--            app:strokeColor="#7E8082"-->
        <!--            app:strokeWidth="1dp"-->
        <!--            app:cornerRadius="12dp"-->
        <!--            android:layout_marginLeft="5dp"-->
        <!--            android:layout_marginRight="10dp"/>-->

    </LinearLayout>
</LinearLayout>